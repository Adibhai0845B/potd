{
  "manifest_version": 3,
  "name": "POTD Coins & Streaks",
  "version": "0.3.4",
  "description": "Automatically track and reward your LeetCode and GFG Problem of the Day progress with coins and streaks.",
  "permissions": ["storage", "notifications"],
  "host_permissions": [
    "http://localhost:4000/*",
    "https://leetcode.com/*",
    "https://www.geeksforgeeks.org/*",
    "https://practice.geeksforgeeks.org/*",
    "https://practiceapi.geeksforgeeks.org/*"
  ],
  "background": { "service_worker": "background.js", "type": "module" },
  "action": { "default_popup": "popup.html", "default_title": "POTD Tracker" },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["content/leetcode.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.geeksforgeeks.org/*", "https://practice.geeksforgeeks.org/*"],
      "js": ["content/gfg.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/gfg_injected.js"],
      "matches": ["https://www.geeksforgeeks.org/*", "https://practice.geeksforgeeks.org/*"]
    },
    {
      "resources": ["content/leetcode_injected.js"],
      "matches": ["https://leetcode.com/*"]
    }
  ],
  "content_security_policy": { "extension_pages": "script-src 'self'; object-src 'self'" },
  "options_ui": { "page": "options.html", "open_in_tab": false }
}
